<h3 class="text-center">All Articles</h3>
<br>
<br>
<table class="table table-hover">
    <thead class="thead-dark">
      <tr>
        <th scope="col">Article Id.</th>
        <th scope="col">Title</th>
        <th scope="col">User Name</th>
        <th scope="col">User Id.</th>
      </tr>
    </thead>
    <% @articles.each do |a| %>
    <tbody>
      <tr>
        <td><%= a.id %></td>
        <td><%= a.title %></td>     
        <td><%= a.user.name %></td>     
        <td><%= a.user_id %></td>     
    </tr>
    </tbody>
  <% end %>
</table>