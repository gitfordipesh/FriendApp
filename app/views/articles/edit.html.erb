<h1>Edit Article</h1>

<%= form_with(model: @article, url: user_article_path) do |form| %>
  <p>
    <%= form.label :title %><br>
    <%= form.text_field :title %>
    <% @article.errors.full_messages_for(:title).each do |message|%>
    <div>
      <%=message%>
    </div>
    <%end%>
  </p>
  <p>
    <%= form.label :body %><br>
    <%= form.text_area :body %>
    <% @article.errors.full_messages_for(:body).each do |message|%>
    <div>
      <%=message%>
    </div>
    <%end%>
  </p>
  <p>
    <%= form.submit class:"btn btn-secondary"%>
  </p>
<% end %>